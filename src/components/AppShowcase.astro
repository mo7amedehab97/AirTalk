<style>
  .app-showcase {
    padding: 6rem 0;
    position: relative;
    overflow: hidden;
    background: 
      radial-gradient(ellipse at 20% 30%, rgba(79, 127, 255, 0.08) 0%, transparent 50%),
      radial-gradient(ellipse at 80% 70%, rgba(139, 127, 255, 0.08) 0%, transparent 50%);
  }

  .app-showcase::before {
    content: '';
    position: absolute;
    top: 10%;
    right: -10%;
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, rgba(79, 127, 255, 0.1) 0%, transparent 70%);
    border-radius: 50%;
    filter: blur(60px);
    animation: float-bubble 12s ease-in-out infinite;
  }

  .app-showcase::after {
    content: '';
    position: absolute;
    bottom: 20%;
    left: -10%;
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(139, 127, 255, 0.1) 0%, transparent 70%);
    border-radius: 50%;
    filter: blur(50px);
    animation: float-bubble 10s ease-in-out infinite reverse;
  }

  @keyframes float-bubble {
    0%, 100% {
      transform: translate(0, 0) scale(1);
    }
    33% {
      transform: translate(-20px, -30px) scale(1.1);
    }
    66% {
      transform: translate(20px, 20px) scale(0.9);
    }
  }

  .showcase-header {
    text-align: center;
    margin-bottom: 5rem;
    position: relative;
    z-index: 1;
  }

  .showcase-badge {
    display: inline-block;
    padding: 0.5rem 1.5rem;
    background: rgba(61, 61, 133, 0.5);
    border: 1px solid var(--border);
    border-radius: 50px;
    font-size: 0.9rem;
    color: var(--text-muted);
    font-weight: 500;
    margin-bottom: 1.5rem;
  }

  .showcase-item {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    margin-bottom: 6rem;
    position: relative;
    z-index: 1;
  }

  .showcase-item:last-child {
    margin-bottom: 0;
  }

  .showcase-item.reverse {
    direction: rtl;
  }

  .showcase-item.reverse > * {
    direction: ltr;
  }

  .showcase-content {
    max-width: 500px;
  }

  .feature-label {
    display: block;
    font-size: 0.95rem;
    color: var(--text-dim);
    font-style: italic;
    margin-bottom: 0.75rem;
    opacity: 0.9;
  }

  .showcase-title {
    font-size: clamp(1.75rem, 3vw, 2.5rem);
    font-weight: 700;
    margin-bottom: 1.25rem;
    line-height: 1.2;
    color: var(--text);
  }

  .showcase-title .highlight {
    background: linear-gradient(135deg, var(--primary-light) 0%, var(--accent-light) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .showcase-description {
    font-size: 1.05rem;
    color: var(--text-muted);
    line-height: 1.8;
  }

  .showcase-image {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .mockup-wrapper {
    position: relative;
    max-width: 400px;
    width: 100%;
  }

  .mockup-wrapper img {
    width: 100%;
    height: auto;
    transition: transform 0.4s ease;
  }

  .showcase-item:hover .mockup-wrapper img {
    transform: translateY(-8px) scale(1.02);
  }

  /* Floating decorative elements */
  .floating-element {
    position: absolute;
    font-size: 2rem;
    animation: float 3s ease-in-out infinite;
    filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.3));
    z-index: 10;
  }

  .star-1 {
    top: -10%;
    right: 5%;
    animation-delay: 0s;
  }

  .emoji-1 {
    top: 20%;
    left: -10%;
    animation-delay: 0.5s;
    font-size: 1.5rem;
  }

  .emoji-2 {
    top: 5%;
    left: 10%;
    animation-delay: 1s;
    font-size: 1.75rem;
  }

  .fire {
    top: -5%;
    left: 5%;
    animation-delay: 0.3s;
  }

  .smile {
    top: 15%;
    right: -5%;
    animation-delay: 0.7s;
  }

  .plane {
    bottom: 10%;
    left: -8%;
    animation-delay: 0.2s;
    font-size: 1.5rem;
  }

  .globe {
    top: -8%;
    right: 10%;
    animation-delay: 0.4s;
  }

  .flag {
    bottom: 5%;
    left: -5%;
    animation-delay: 0.8s;
    font-size: 1.5rem;
  }

  .heart {
    top: -10%;
    left: 15%;
    animation-delay: 0.2s;
  }

  .sparkle {
    bottom: 15%;
    right: -8%;
    animation-delay: 0.6s;
  }

  .clock {
    top: -5%;
    right: 15%;
    animation-delay: 0.3s;
  }

  .phone {
    bottom: 10%;
    left: -10%;
    animation-delay: 0.7s;
  }

  .game {
    top: -8%;
    left: 10%;
    animation-delay: 0.1s;
  }

  .trophy {
    top: 15%;
    right: -8%;
    animation-delay: 0.5s;
  }

  .dice {
    bottom: 5%;
    left: -5%;
    animation-delay: 0.9s;
    font-size: 1.5rem;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0) rotate(0deg);
    }
    50% {
      transform: translateY(-12px) rotate(5deg);
    }
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .showcase-item {
      gap: 3rem;
    }

    .mockup-wrapper {
      max-width: 350px;
    }
  }

  @media (max-width: 768px) {
    .app-showcase {
      padding: 4rem 0;
    }

    .showcase-header {
      margin-bottom: 3rem;
    }

    .showcase-item {
      grid-template-columns: 1fr;
      gap: 2rem;
      margin-bottom: 4rem;
      text-align: center;
    }

    .showcase-item.reverse {
      direction: ltr;
    }

    .showcase-content {
      max-width: 100%;
      order: 1;
    }

    .showcase-image {
      order: 2;
    }

    .mockup-wrapper {
      max-width: 300px;
    }

    .floating-element {
      font-size: 1.5rem;
    }

    .showcase-title {
      font-size: 1.5rem;
    }

    .showcase-description {
      font-size: 0.95rem;
    }
  }

  @media (max-width: 480px) {
    .showcase-item {
      gap: 1.5rem;
      margin-bottom: 3rem;
    }

    .mockup-wrapper {
      max-width: 260px;
    }

    .floating-element {
      font-size: 1.25rem;
    }

    .showcase-badge {
      font-size: 0.8rem;
      padding: 0.4rem 1rem;
    }

    .feature-label {
      font-size: 0.85rem;
    }

    .showcase-title {
      font-size: 1.3rem;
    }

    .showcase-description {
      font-size: 0.9rem;
      line-height: 1.6;
    }
  }
</style>

