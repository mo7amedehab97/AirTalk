---
import { getCollection } from 'astro:content';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';
import SEO from '../../components/SEO.astro';
import '../../styles/global.css';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
const publishedTime = entry.data.date.toISOString();
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Signika:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <SEO 
      title={`${entry.data.title} - AirTalk Blog`}
      description={entry.data.description}
      keywords={`${entry.data.title}, talk to strangers, voice chat, random chat, chat tips, ${entry.slug}`}
      canonical={`https://www.airtalk.live/blog/${entry.slug}`}
      ogType="article"
      article={true}
      publishedTime={publishedTime}
      modifiedTime={publishedTime}
      author={entry.data.author}
    />
  </head>
  <body>
    <Navbar />
    
    <article class="blog-post">
      <div class="post-header">
        <div class="container">
          <h1 class="post-title">{entry.data.title}</h1>
          <div class="post-meta">
            <span class="post-date">üìÖ {entry.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</span>
            <span class="post-author">üë§ {entry.data.author}</span>
          </div>
        </div>
      </div>

      <div class="post-image">
        <div class="placeholder-image">{entry.data.title.slice(0, 2).toUpperCase()}</div>
      </div>

      <div class="post-content">
        <div class="container">
          <div class="content-wrapper">
            <Content />
          </div>
          
          <div class="post-footer">
            <a href="/blog" class="back-btn">‚Üê Back to Blog</a>
          </div>
        </div>
      </div>
    </article>

    <Footer />
  </body>
</html>

<style>
  .blog-post {
    padding-top: 80px;
    background: var(--bg-darker);
    min-height: 100vh;
  }

  .post-header {
    padding: 4rem 0 2rem;
    background: linear-gradient(180deg, var(--bg-dark) 0%, var(--bg-darker) 100%);
    text-align: center;
  }

  .post-title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 800;
    margin-bottom: 1.5rem;
    color: var(--text);
    line-height: 1.2;
  }

  .post-meta {
    display: flex;
    gap: 2rem;
    justify-content: center;
    font-size: 1rem;
    color: var(--text-muted);
    flex-wrap: wrap;
  }

  .post-image {
    width: 100%;
    max-width: 1200px;
    height: 400px;
    margin: 0 auto;
    background: linear-gradient(135deg, var(--primary) 0%, var(--accent) 100%);
    border-radius: 1.5rem;
  }

  .placeholder-image {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 6rem;
    font-weight: 800;
    color: rgba(255, 255, 255, 0.9);
  }

  .post-content {
    padding: 4rem 0;
  }

  .content-wrapper {
    max-width: 800px;
    margin: 0 auto;
    background: var(--bg-card);
    backdrop-filter: blur(10px);
    padding: 3rem;
    border-radius: 1.5rem;
    border: 1px solid var(--border);
  }

  .content-wrapper :global(h2) {
    font-size: 2rem;
    font-weight: 700;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    color: var(--text);
  }

  .content-wrapper :global(h3) {
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    color: var(--primary-light);
  }

  .content-wrapper :global(p) {
    color: var(--text-muted);
    line-height: 1.8;
    margin-bottom: 1.5rem;
    font-size: 1.05rem;
  }

  .content-wrapper :global(ul),
  .content-wrapper :global(ol) {
    color: var(--text-muted);
    line-height: 1.8;
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }

  .content-wrapper :global(li) {
    margin-bottom: 0.75rem;
  }

  .content-wrapper :global(strong) {
    color: var(--text);
    font-weight: 600;
  }

  .content-wrapper :global(code) {
    background: rgba(139, 92, 246, 0.2);
    padding: 0.2rem 0.5rem;
    border-radius: 0.25rem;
    font-family: 'Courier New', monospace;
    color: var(--primary-light);
  }

  .content-wrapper :global(blockquote) {
    border-left: 4px solid var(--primary);
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: var(--text-muted);
  }

  .post-footer {
    max-width: 800px;
    margin: 3rem auto 0;
    text-align: center;
  }

  .back-btn {
    display: inline-block;
    padding: 1rem 2.5rem;
    background: var(--bg-card);
    color: var(--primary-light);
    text-decoration: none;
    border-radius: 50px;
    font-weight: 600;
    border: 1px solid var(--border);
    transition: all 0.3s ease;
  }

  .back-btn:hover {
    background: var(--primary);
    color: white;
    transform: translateY(-2px);
    box-shadow: var(--shadow);
  }

  @media (max-width: 768px) {
    .post-image {
      height: 250px;
      border-radius: 0;
    }

    .content-wrapper {
      padding: 2rem 1.5rem;
      border-radius: 0;
    }

    .placeholder-image {
      font-size: 4rem;
    }
  }
</style>

