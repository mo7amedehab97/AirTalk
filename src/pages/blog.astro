---
import { getCollection } from 'astro:content';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import SEO from '../components/SEO.astro';

const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Signika:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <SEO 
      title="AirTalk Blog - Chat Tips, Voice Call Guides & Stranger Talk Insights"
      description="Read expert articles about talking to strangers, voice chat tips, anonymous chatting safety, making friends online, and getting the most from random chat platforms. Learn how to connect better."
      keywords="chat blog, voice chat tips, talk to strangers guide, random chat advice, online chat tips, stranger chat safety, voice call guides"
      canonical="https://www.airtalk.live/blog"
    />
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body>
    <Navbar />
    
    <section class="blog-hero">
      <div class="container">
        <h1 class="page-title">AirTalk Blog</h1>
        <p class="page-subtitle">Tips, Stories & Live Chat Insights</p>
      </div>
    </section>

    <section class="blog-grid-section">
      <div class="container">
        <div class="blog-grid">
          {sortedPosts.map((post) => (
            <article class="blog-card">
              <div class="blog-image">
                <div class="placeholder-image">{post.data.title.slice(0, 2).toUpperCase()}</div>
              </div>
              <div class="blog-content">
                <h2 class="blog-title">
                  <a href={`/blog/${post.slug}`}>{post.data.title}</a>
                </h2>
                <div class="blog-meta">
                  <span class="blog-date">ðŸ“… {post.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</span>
                  <span class="blog-author">ðŸ‘¤ {post.data.author}</span>
                </div>
                <p class="blog-description">{post.data.description}</p>
                <a href={`/blog/${post.slug}`} class="read-more-btn">Read More</a>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>

    <Footer />
  </body>
</html>

<style>
  .blog-hero {
    padding: 8rem 0 4rem;
    background: linear-gradient(180deg, var(--bg-dark) 0%, var(--bg-darker) 100%);
    text-align: center;
  }

  .blog-grid-section {
    padding: 4rem 0;
    background: var(--bg-darker);
    min-height: 60vh;
  }

  .blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2rem;
  }

  .blog-card {
    background: var(--bg-card);
    backdrop-filter: blur(10px);
    border-radius: 1.5rem;
    border: 1px solid var(--border);
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .blog-card:hover {
    transform: translateY(-5px);
    border-color: var(--primary-light);
    box-shadow: var(--shadow-lg);
  }

  .blog-image {
    width: 100%;
    height: 220px;
    overflow: hidden;
    background: linear-gradient(135deg, var(--primary) 0%, var(--accent) 100%);
  }

  .placeholder-image {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 4rem;
    font-weight: 800;
    color: rgba(255, 255, 255, 0.9);
  }

  .blog-content {
    padding: 2rem;
  }

  .blog-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .blog-title a {
    color: var(--text);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .blog-title a:hover {
    color: var(--primary-light);
  }

  .blog-meta {
    display: flex;
    gap: 1.5rem;
    margin-bottom: 1rem;
    font-size: 0.9rem;
    color: var(--text-dim);
    flex-wrap: wrap;
  }

  .blog-description {
    color: var(--text-muted);
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .read-more-btn {
    display: inline-block;
    padding: 0.75rem 2rem;
    background: linear-gradient(135deg, var(--primary) 0%, var(--accent) 100%);
    color: white;
    text-decoration: none;
    border-radius: 50px;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .read-more-btn:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow);
  }

  @media (max-width: 768px) {
    .blog-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

