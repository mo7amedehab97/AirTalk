---
import posts from "../../public/articles/index.json";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import SEO from "../components/SEO.astro";
import "../styles/global.css";

const allPosts = posts;
const sortedPosts = allPosts.sort(
  (a, b) => new Date(b.date).valueOf() - new Date(a.date).valueOf(),
);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Signika:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <SEO
      title="AirTALK Blog - Chat Tips, Voice Call Guides & Stranger Talk Insights"
      description="Read expert articles about talking to strangers, voice chat tips, anonymous chatting safety, making friends online, and getting the most from random chat platforms. Learn how to connect better."
      keywords="chat blog, voice chat tips, talk to strangers guide, random chat advice, online chat tips, stranger chat safety, voice call guides"
      canonical="https://www.airtalk.live/blog"
    />
  </head>
  <body>
    <Navbar />

    <section class="blog-hero">
      <div class="container">
        <h1 class="page-title">AirTALK Blog</h1>
        <p class="page-subtitle">Tips, Stories & Live Chat Insights</p>
      </div>
    </section>

    <section class="blog-grid-section">
      <div class="container">
        <div class="blog-grid">
          {
            sortedPosts.map((post) => (
              <article class="blog-card">
                <div class="blog-image">
                  <img
                    src={`/articles/${post.id}.jpg`}
                    alt={post.imgAlt}
                    class="post-img-cover"
                    loading="lazy"
                  />
                </div>
                <div class="blog-content">
                  <h2 class="blog-title">
                    <a href={`/blog/${post.id}`}>{post.title}</a>
                  </h2>
                  <div class="blog-meta">
                    <span class="blog-date">
                      ðŸ“…{" "}
                      {new Date(post.date).toLocaleDateString("en-US", {
                        year: "numeric",
                        month: "long",
                        day: "numeric",
                      })}
                    </span>
                    <span class="blog-author">ðŸ‘¤ {post.author}</span>
                  </div>
                  <p class="blog-description">{post.excerpt}</p>
                  <a href={`/blog/${post.id}`} class="read-more-btn">
                    Read More
                  </a>
                </div>
              </article>
            ))
          }
        </div>
      </div>
    </section>

    <Footer />
  </body>
</html>

<style>
  .blog-hero {
    padding: 8rem 0 4rem;
    background: linear-gradient(
      180deg,
      var(--bg-dark) 0%,
      var(--bg-darker) 100%
    );
    text-align: center;
  }

  .blog-grid-section {
    padding-bottom: 4rem;
    background: var(--bg-darker);
    min-height: 60vh;
  }

  .blog-grid {
    column-count: 3;
    column-gap: 2rem;
  }

  .blog-card {
    background: var(--bg-card);
    backdrop-filter: blur(10px);
    border-radius: 1.5rem;
    border: 1px solid var(--border);
    overflow: hidden;
    transition: all 0.3s ease;
    break-inside: avoid;
    margin-bottom: 2rem;
  }

  .blog-card:hover {
    transform: translateY(-5px);
    border-color: var(--primary-light);
    box-shadow: var(--shadow-lg);
  }

  .blog-image {
    width: 100%;
    overflow: hidden;
  }

  .post-img-cover {
    width: 100%;
    height: 100%;
    object-fit: contain;
    transition: transform 0.5s ease;
  }

  .blog-card:hover .post-img-cover {
    transform: scale(1.05);
  }

  .blog-content {
    padding: 2rem;
  }

  .blog-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .blog-title a {
    color: var(--text);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .blog-title a:hover {
    color: var(--primary-light);
  }

  .blog-meta {
    display: flex;
    gap: 1.5rem;
    margin-bottom: 1rem;
    font-size: 0.9rem;
    color: var(--text-dim);
    flex-wrap: wrap;
  }

  .blog-description {
    color: var(--text-muted);
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .read-more-btn {
    display: inline-block;
    padding: 0.75rem 2rem;
    background: linear-gradient(135deg, var(--primary) 0%, var(--accent) 100%);
    color: white;
    text-decoration: none;
    border-radius: 50px;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .read-more-btn:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow);
  }

  @media (max-width: 1024px) {
    .blog-grid {
      column-count: 2;
    }
  }

  @media (max-width: 768px) {
    .blog-grid {
      column-count: 1;
    }
  }
</style>
