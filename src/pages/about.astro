<style>
  .about-hero {
    padding: 8rem 0 4rem;
    background: linear-gradient(180deg, var(--bg-dark) 0%, var(--bg-darker) 100%);
    text-align: center;
  }

  .page-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 800;
    margin-bottom: 1.5rem;
    background: linear-gradient(135deg, var(--primary-light) 0%, var(--accent-light) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .page-subtitle {
    font-size: clamp(1.1rem, 2vw, 1.3rem);
    color: var(--text-muted);
    max-width: 700px;
    margin: 0 auto;
    font-style: italic;
  }

  .about-content {
    padding: 4rem 0;
    background: var(--bg-darker);
  }

  .about-intro {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 3rem;
    align-items: center;
    margin-bottom: 5rem;
    padding: 3rem;
    background: var(--bg-card);
    border-radius: 1.5rem;
    border: 1px solid var(--border);
  }

  .about-illustration {
    font-size: 8rem;
  }

  .about-text p {
    color: var(--text-muted);
    line-height: 1.8;
    margin-bottom: 1.5rem;
    font-size: 1.05rem;
  }

  .feature-icon-large {
    font-size: 4rem;
    margin-bottom: 1.5rem;
  }

  .reasons-section {
    margin-top: 5rem;
    padding: 3rem;
    background: var(--bg-card);
    border-radius: 1.5rem;
    border: 1px solid var(--border);
  }

  .reasons-list {
    list-style: none;
    padding: 0;
  }

  .reasons-list li {
    color: var(--text-muted);
    line-height: 1.8;
    margin-bottom: 2rem;
    padding-left: 2rem;
    position: relative;
  }

  .reasons-list li::before {
    content: "‚Üí";
    position: absolute;
    left: 0;
    color: var(--primary-light);
    font-size: 1.5rem;
  }

  .reasons-list strong {
    color: var(--text);
    display: block;
    margin-bottom: 0.5rem;
  }

  @media (max-width: 768px) {
    .about-intro {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .about-illustration {
      font-size: 5rem;
    }

    .reasons-list li {
      padding-left: 1.5rem;
    }
  }
</style>

